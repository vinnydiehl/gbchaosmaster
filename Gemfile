source :rubygems

gem "rails", "~> 3.2"

# Use HAML as the templating framework.
gem "haml-rails", "~> 0.3"

# Use Thin as the web server.
gem "thin", "~> 1.5"

# jQuery JS Library
gem "jquery-rails", "~> 2.1"

group :assets do
  gem "sass-rails", "~> 3.2"
  gem "coffee-rails", "~> 3.2"

  gem "bootstrap-sass", "~> 2.1"

  gem "uglifier", "~> 1.3"
end

group :development, :test do
  gem "sqlite3", "~> 1.3"

  gem "rspec-rails", "~> 2.11"
  gem "capybara", "~> 1.1"
  gem "fuubar", "~> 1.1"
end

group :production do
  gem "pg", "~> 0.14"
end
